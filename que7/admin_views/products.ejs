<%- include('layout') %>
<section><h2>Products</h2><a href="/admin/products/new">Add Product</a>
<table><tr><th>Title</th><th>Category</th><th>Price</th><th>Stock</th><th>Action</th></tr>
<% products.forEach(p=>{ %><tr><td><%= p.title %></td><td><%= p.category? p.category.name : '-' %></td><td><%= p.price %></td><td><%= p.stock %></td><td><a href="/admin/products/edit/<%= p._id %>">Edit</a> <form method="POST" action="/admin/products/delete/<%= p._id %>" style="display:inline"><button>Delete</button></form></td></tr><% }) %></table></section>