<%- include('layout') %>
<section><h2><%= product? 'Edit' : 'Add' %> Product</h2>
<form method="POST" action="<%= product? '/admin/products/edit/'+product._id : '/admin/products' %>">
<label>Title</label><input name="title" value="<%= product? product.title : '' %>" required>
<label>Description</label><textarea name="description"><%= product? product.description : '' %></textarea>
<label>Price</label><input name="price" type="number" step="0.01" value="<%= product? product.price : '' %>" required>
<label>Category</label><select name="category"><option value=''>--None--</option><% cats.forEach(c=>{ %><option value="<%= c._id %>" <%= product && product.category && String(product.category)==String(c._id) ? 'selected':''%>><%= c.name %></option><% }) %></select>
<label>Image URL</label><input name="image" value="<%= product? product.image : '' %>">
<label>Stock</label><input name="stock" type="number" value="<%= product? product.stock : 0 %>">
<button type="submit">Save</button></form></section>