<section class="card">
  <h2>Edit Employee</h2>
  <form method="POST" action="/employees/<%= employee._id %>?_method=PUT" class="form two-col">
    <div>
      <label>Name</label>
      <input name="name" type="text" value="<%= employee.name %>" required />
    </div>

    <div>
      <label>Email</label>
      <input type="email" value="<%= employee.email %>" disabled />
    </div>

    <div>
      <label>Basic</label>
      <input name="basic" type="number" step="0.01" value="<%= employee.salary.basic %>" required />
    </div>
    <div>
      <label>HRA</label>
      <input name="hra" type="number" step="0.01" value="<%= employee.salary.hra %>" required />
    </div>
    <div>
      <label>DA</label>
      <input name="da" type="number" step="0.01" value="<%= employee.salary.da %>" required />
    </div>
    <div>
      <label>Bonus</label>
      <input name="bonus" type="number" step="0.01" value="<%= employee.salary.bonus %>" />
    </div>
    <div>
      <label>Deductions</label>
      <input name="deductions" type="number" step="0.01" value="<%= employee.salary.deductions %>" />
    </div>

    <div class="full">
      <button class="btn primary" type="submit">Save</button>
      <a class="btn" href="/employees">Back</a>
    </div>
  </form>
</section>
