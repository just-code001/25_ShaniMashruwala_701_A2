<!DOCTYPE html>
<html>
<head>
  <title>Registration Success</title>
  <style>
    table { border-collapse: collapse; width: 50%; margin: auto; }
    td, th { border: 1px solid black; padding: 8px; text-align: center; }
    img { width: 100px; height: auto; }
  </style>
</head>
<body>
  <h2 style="text-align:center;">User Registration Details</h2>
  <table>
    <tr><th>Username</th><td><%= userData.username %></td></tr>
    <tr><th>Email</th><td><%= userData.email %></td></tr>
    <tr><th>Gender</th><td><%= userData.gender %></td></tr>
    <tr><th>Hobbies</th><td><%= userData.hobbies.join(", ") %></td></tr>
    <tr>
      <th>Profile Pic</th>
      <td><% if(userData.profilePic) { %>
        <img src="/uploads/<%= userData.profilePic %>" />
      <% } %></td>
    </tr>
    <tr>
      <th>Other Pics</th>
      <td>
        <% userData.otherPics.forEach(pic => { %>
          <img src="/uploads/<%= pic %>" />
        <% }) %>
      </td>
    </tr>
  </table>

  <div style="text-align:center;margin-top:20px;">
    <a href="/download">Download User Data</a>
  </div>
</body>
</html>
